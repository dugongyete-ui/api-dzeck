{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/api/chat",
        "destination": "https://api-gateway--manyse.replit.app/api/chat",
        "type": 307
      },
      {
        "source": "/v1/chat/completions",
        "destination": "https://api-gateway--manyse.replit.app/v1/chat/completions",
        "type": 307
      },
      {
        "source": "/stream",
        "destination": "https://api-gateway--manyse.replit.app/stream",
        "type": 307
      },
      {
        "source": "/health",
        "destination": "https://api-gateway--manyse.replit.app/health",
        "type": 307
      },
      {
        "source": "/ping",
        "destination": "https://api-gateway--manyse.replit.app/ping",
        "type": 307
      }
    ],
    "rewrites": [
      {
        "source": "/settings",
        "destination": "/settings.html"
      },
      {
        "source": "/models",
        "destination": "/models.html"
      },
      {
        "source": "/test-api",
        "destination": "/test-api.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  }
}
